<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
<form:SimpleForm title="Jitu">	
<form:content>
<Label text="Name :"  wrappingType="Hyphenated" wrapping="true"/>	
<Input id="Idval" value="{name}" width="300px" showValueHelp="true" valueHelpRequest="onHelpRequest"/>
<Label text="Benefits" textAlign="Center" />		
<Input value="{benefit}" 	class="sapUiSmallMarginBottom"  width="300px" enableSuggestionsHighlighting="true" />
<Label text="Type"/>		
<Input value="{type}" 	class="sapUiSmallMarginBottom" width="300px"/>
<Label text="Price"/>		
<Input value="{price}"	class="sapUiSmallMarginBottom"  width="300px"/>
<Label text="Unit"/>		
<Input value="{unit}"	class="sapUiSmallMarginBottom"  width="300px"/>
</form:content>
</form:SimpleForm>
</core:FragmentDefinition>	